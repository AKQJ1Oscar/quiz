<h2>Login</h2>
<form method='POST' action='/session'>
	<input type='hidden' name='redir' value='<%= redir %>'>
	<div>
		<label for="login">Usuario:</label>
		<br />
		<input type="text" id="login" name="login" required size="30" class="form-control" style="width: 180px;" />
	</div>
	<div style="margin-top: 10px;">
		<label for="password">Contraseña:</label>
		<br />
		<input type="password" id="password" name="password" required size="30" class="form-control" style="width: 180px;" />
	</div>
	<div>
		<input name="commit" type="submit" value="Iniciar sesión" class="btn btn-primary" style="margin-top: 15px;" />
	</div>
</form>